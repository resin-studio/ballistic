Function:
  params+=Param[','] '=>' body=Body 
;

Param: name = ID ;

Body: Bind | Distribution ;
Distribution: Normal | Direct ;

Bind: 
  src = Distribution '@' name = ID '=>' dst = Body
;
Normal: 'normal' '(' mean=Expr ',' sigma=Expr ')' ;
Direct: 'direct' '(' content=Expr ')'  ;
  
Expr: Prod (('+' | '-') Prod)* ;

Prod: Atom ('*' Atom)* ;

Atom: ID | FLOAT | ('(' Expr ')') ;