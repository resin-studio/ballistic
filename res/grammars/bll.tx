Function:
  'fun' params+=Param[','] '=>' body=Body 
;

Param: name = ID ;

Body: Bind | Distribution ;
Distribution: Normal | Coll ;

Bind: 
  'bind' src = Distribution 'as' name = ID '=>' dst = Body |
  'bind' '(' src = Distribution ')' 'as' name = ID '=>' dst = Body 
;
Normal: 'normal' '(' mean=Expr ',' sigma=Expr ')' ;
Coll: 'coll' content=Expr  ;
  
Expr: Prod (('+' | '-') Prod)* ;

Prod: Atom ('*' Atom)* ;

Atom: ID | FLOAT | ('(' Expr ')') ;